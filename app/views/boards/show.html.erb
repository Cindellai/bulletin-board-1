<div>
  <div>
    <h1>
      Board #<%= @the_board.id %> details
    </h1>
<form action="/insert_post" method="post">
      <div>
        <label for="post_title_box">
          Title
        </label>
        <input type="text" id="post_title_box" name="query_title">
      </div>

      <div>
        <label for="post_body_box">
          Body
        </label>
        <textarea id="post_body_box" name="query_body"></textarea>
      </div>

      <div>
        <label for="post_expires_on_box">
          Expires on
        </label>
        <input type="date" id="post_expires_on_box" name="query_expires_on">
      </div>

      <input type="hidden" name="query_board_id" value="<%= @the_board.id %>">

      <button>
        Add post
      </button>
    </form>
    
    <div>
      <div>
        <a href="/boards">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_board/<%= @the_board.id %>">
          Delete board
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_board.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_board.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_board.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Edit board
    </h2>

    
    
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Posts in this Board
    </h2>
    <ul>
      <% @the_board.posts.each do |post| %>
        <li><%= post.title %></li>
      <% end %>
    </ul>
  </div>
</div>
